{% extends 'base.html.twig' %}

{% form_theme contact_form 'bootstrap_4_layout.html.twig' %}


{% block content %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <p>Vous souhaitez me contacter ? Remplissez le formulaire ci-dessous et je reviendrai vers vous!</p>


                {{ form_start(contact_form) }}
                    {{ form_errors(contact_form) }}

                    {{ form_row(contact_form.name, {'label':'Votre nom'}) }}

                    {{ form_row(contact_form.firstname, {'label':'Votre pr√©nom'}) }}


                    {{ form_row(contact_form.email, {'label':'Votre email'}) }}

                    {{ form_row(contact_form.subject, {'label':'Sujet'}) }}


                    {{ form_row(contact_form.content, {'label':'Votre demande', 'attr': {'rows': '10'}}) }}


                    <div class="row">
                        <div class="form-group col-xs-12">
                            <button type="submit" class="btn btn-default">Valider</button>
                        </div>
                    </div>
                {{ form_end(contact_form) }}
            </div>
        </div>
    </div>
{%  endblock %}


